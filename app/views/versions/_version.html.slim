tr id="#{dom_id version}"
  td
    == version.id
  td
    == version.value
  td
    == version.created_at
  td
    == version.updated_at
  - if action_name != "show" 
    td
      == link_to version
        <i class='icn'>📄</i> Show
      == link_to edit_version_path(version)
        <i class='icn'>✏️</i> Edit
