tr.hoverable id="#{dom_id product}" data-action="click->table#goTo" data-table-url-param=product_path(product)
  td.text-center
    = render "_shared/preloadable_img", src: thumb_url(product), class_names: "zoomable", width: 100
  td
    = product.full_title
    - if product.variations.present?
      ul.product-variations
        - product.variations.each do |variation|
          li = variation.title
  td = product.woo_id
  td = product.shopify_id&.gsub('gid://shopify/Product/', '')
  td.actions
    = render "_shared/action-edit", route: edit_product_path(product)
    = link_to new_purchase_path(product:), {class: "no-events"}
